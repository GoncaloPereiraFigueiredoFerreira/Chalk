extends base
    
block page
    // Image
    .m-16.mb-2.mt-4.p-4.bg-white.border.border-gray-200.rounded-lg.flex
      
      img.mt-4.w-36.rounded-full(src="https://thumbs.dreamstime.com/b/default-avatar-profile-icon-vector-social-media-user-photo-183042379.jpg")
      .mt-10.ml-6.w-full.flex.justify-between
        h1.text-4xl Welcome #{user.first_name} #{user.last_name}!
        .mt-16.ml-4
          p #[a(href="/createChannel") Criar canal]
          p #[a(href="#") Editar Perfil]

    .mt-4.mr-16.ml-16
      .grid.grid-cols-5.gap-2
        .col-start-1.bg-white.rounded-lg.pb-64
          .m-4
            h2.text-3xl Channels
            .ml-4
              h4 Subscribed to:
              ul.ml-4.divide-y.divide-gray-200(role='list' class='dark:divide-gray-700')
                each sub in channels
                  li.py-3(class='sm:py-4')
                    .flex.items-center.space-x-4
                      a.text-sm.font-medium.text-gray-900.truncate(href="/channel/"+sub._id) #{sub.name}

        .col-start-2.col-span-3.bg-white.rounded-lg
          .m-4
            h2.text-3xl Announcements
            ul.ml-4.divide-y.divide-gray-200(role='list' class='dark:divide-gray-700')
              each chn in anns
                h3.mt-2.text-xl #{chn.channel.name}
                each post in chn.posts
                  li.py-3(class='sm:py-4')
                    .flex.items-center.space-x-4.justify-between
                      div
                        a.text-gray-900.truncate(href="/channel/posts/"+ chn.channel._id+"?post="+post._id class='hover:underline dark:text-blue-500')
                          | #{post.title}
                        p.mt-2.text-xs.text-gray-600.truncate(class="dark:text-white")
                          | Por: #{post.publisher}
                      p.text-sm.font-medium.text-gray-900.truncate(class="dark:text-white")
                        | #{post.date}
             
        .col-start-5.bg-white.rounded-lg
          .m-4
            h2.text-3xl Important Dates
            ul.divide-y.divide-gray-200(role='list' class='dark:divide-gray-700')
              each chn in dates
                h3.mt-2.text-xl #{chn.channel.name}
                each date in chn.dates
                  li.py-3(class='sm:py-4')
                      .flex.items-center.space-x-4
                        p.text-sm.font-medium.text-gray-900.truncate(class="dark:text-white")
                          | #{date.date}
                        p.font-medium.text-gray-900.truncate(class="dark:text-white")
                          | #[strong #{date.title}]
                      p.mt-2.text-xs.font-medium.text-gray-600.truncate(class="dark:text-white")
                          | #{date.description}
              